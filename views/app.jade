extends layout

block content
	.app-page
		section.banner.bgMint
			.content.max768
				.col-sm-6.tac
					img(src=assetPath('images/logo-fancy-600.png'))
				.col-sm-6.txt-white.words
					h1 Ping Pong at it's Nerdiest
					p Find the best ping pong players from accross the land and challenge them to a duel of pure, unadulterated, pong skill.
		
		section.users
			.content
				each val in users
					.item
						.person
							p.score-space #{val.profile.score}
							img(src = val.profile.picture)
							p #{val.profile.name}
							h5 #{val.profile.company}
							div.icon.bgMint
								span.ion-chevron-up
						
						.about
							span.ion-ios-close-empty
							h5 Location
							p #{val.profile.location}
				
				
